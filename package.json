{
  "name": "nestjs-api-connector",
  "version": "0.0.13",
  "description": "Enterprise-grade API Proxy and Transformation Framework for NestJS",
  "author": "Divami",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/divamidesignlabs/nestjs-api-corrector.git"
  },
  "keywords": [
    "nestjs",
    "api-gateway",
    "api-proxy",
    "transformation",
    "jsonpath",
    "enterprise",
    "resilience",
    "mapping"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "database_init.sql"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json --watch",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "prepublishOnly": "npm run build",
    "start": "nest start"
  },
  "license": "MIT",
  "peerDependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "reflect-metadata": "^0.1.13 || ^0.2.0",
    "rxjs": "^7.8.0",
    "typeorm": "^0.3.0"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.0",
    "axios": "^1.6.0",
    "jsonpath": "^1.1.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/common": "^10.0.2",
    "@nestjs/core": "^10.0.2",
    "@nestjs/platform-express": "^10.0.2",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.12",
    "@types/jsonpath": "^0.2.4",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "globals": "^15.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.0.0",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
